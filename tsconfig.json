{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["es6"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
      "lib/**/*"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/test.manual.ts", "coverage/**"]
}

